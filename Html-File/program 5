<!DOCTYPE html>
<html>
<head>
    <title>Purchase Cost Calculator</title>
</head>
<body>
    <h2>Purchase Cost Calculator</h2>
    <form method="post">
        <h3>Item 1:</h3>
        Price: <input type="number" name="price1" step="0.01" required>
        Quantity: <input type="number" name="qty1" required>

        <h3>Item 2:</h3>
        Price: <input type="number" name="price2" step="0.01" required>
        Quantity: <input type="number" name="qty2" required>

        <h3>Item 3:</h3>
        Price: <input type="number" name="price3" step="0.01" required>
        Quantity: <input type="number" name="qty3" required>

        <br><br>
        <input type="submit" value="Calculate">
    </form>

    <?php
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
        // Get values from form
        $price1 = $_POST['price1'];
        $qty1   = $_POST['qty1'];

        $price2 = $_POST['price2'];
        $qty2   = $_POST['qty2'];

        $price3 = $_POST['price3'];
        $qty3   = $_POST['qty3'];

        // Calculate subtotal
        $subtotal = ($price1 * $qty1) + ($price2 * $qty2) + ($price3 * $qty3);

        // Calculate tax (10% of subtotal)
        $tax = $subtotal * 0.10;

        // Calculate total cost
        $total = $subtotal + $tax;

        // Display results
        echo "<h3>Calculation Results:</h3>";
        echo "Subtotal: ₹" . number_format($subtotal, 2) . "<br>";
        echo "Tax (10%): ₹" . number_format($tax, 2) . "<br>";
        echo "Total Cost: ₹" . number_format($total, 2) . "<br>";
    }
    ?>
</body>
</html>
